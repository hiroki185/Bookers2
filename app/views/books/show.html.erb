<div class="main row justify-content-center">
  
<div class="row row-cols-2">
  
<div class="cal">

<h2>User info</h2>

<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>

    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>

<%= link_to "Edit", edit_user_path(@user.id) %>


<h1 class="text-primary">New book</h1>

<%= form_with model: @newbook do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %> <!--bookの詳細ページへ-->
<% end %>
</div>

<div class="col">
<h2>Books</h2>

  <table>

    <thead>
      <tr>
       <th>name</th>
       <th>Opinion</th>
      </tr>
    </thead>


  <tbody>
    <tr>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
  </tbody>

</table>

</div>

</div>

</div>


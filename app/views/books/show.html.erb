<div class="container px-5 px-sm-0">

<div class="row">

<div class="col-md-3">
<div>
  <%= flash[:notice] %>
</div>
<h2>User info</h2>

<%= image_tag @user.get_profile_image(100,100) %>

<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>

    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>


  <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
  <i class="fa-solid fa-user-gear"></i>
  <% end %>


<h2 class="mt-3">New book</h2>

<%= form_with model: @newbook do |f| %>
<div class="form-group">
  <label for="book_title">Title</label> <br>
  <%= f.text_field :title %>
</div>

<div class="form-group">
  <label for="book_opinion">Opinion</label> <br>
  <%= f.text_area :body %>
</div>

<div class="form-group">
  <%= f.submit 'Create Book' %> <!--bookの詳細ページへ-->
<% end %>
</div>

</div>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>

  <table class="table table-hover table-inverse">

  <tbody>
    <% if @user.id == current_user.id %>
    <tr>
      <td>
        <%= image_tag @user.get_profile_image(80,80) %> <br>
        <%= link_to @user.name, user_path(current_user.id) %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
    <% else %>

    <tr>
      <td>
        <%= image_tag @user.get_profile_image(80,80) %> <br>
        <%= link_to @user.name, user_path(current_user.id) %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
    </tr>
    
    <% end %>
  </tbody>

</table>

</div>

</div>

</div>


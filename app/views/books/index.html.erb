
<div class="container px-5 px-sm-0">

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
<div class="col-md-3">

<h2>User info</h2>
<%= image_tag @user.get_profile_image(100,100) %>
<table  class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>

    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>

<%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
<i class="fa-solid fa-user-gear"></i>
<% end %>


<h2 class="mt-3">New book</h2>

<%= form_with model: @book do |f| %>
<div class="form-group">
  <label for="book_title">Title</label> <br>
  <%= f.text_field :title %>
</div>

<div class="form-group">
  <label for="book_opinion">Opinion</label> <br>
  <%= f.text_area :body %>
</div>

<div class="form-group">
  <%= f.submit 'Create Book' %> <!--bookの詳細ページへ-->
<% end %>
</div>

</div>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>

  <table class="table table-hover table-inverse">

    <thead>
      <tr>
        <th></th>
       <th>Title</th>
       <th>Opinion</th>
      </tr>
    </thead>



    <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= image_tag @user.get_profile_image(80,80) %></td>
      <td><span><%= link_to book.title, book_path(book.id) %></span></td>
      <td><span><%= book.body %></span></td>
    </tr>
  </tbody>
  <% end %>
</table>

</div>

</div>

</div>

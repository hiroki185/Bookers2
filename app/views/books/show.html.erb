<div class="container px-5 px-sm-0">

<div class="row">

<div class="col-md-3">
<div>
  <%= flash[:notice] %>
</div>
<h2>User info</h2>

<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>

    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>

<%= link_to "Edit", edit_user_path(@user.id) %>


<h1>New book</h1>

<%= form_with model: @newbook do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %> <!--bookの詳細ページへ-->
<% end %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>

  <table>

    <thead>
      <tr>
        <th></th>
       <th></th>
       <th></th>
      </tr>
    </thead>


  <tbody>
    <tr>
      <td>
        <%= image_tag @user.get_profile_image(80,80) %> <br>
        <%= link_to @user.name, user_path(current_user.id) %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
  </tbody>

</table>

</div>

</div>

</div>

